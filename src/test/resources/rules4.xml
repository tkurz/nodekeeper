<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<rules>
    <rule name="dataset_created_updated">
        <event type="nodeCreatedUpdated">
            <param>/my/[^/]+/test/[^/]+/version</param>
        </event>
        <bindings>
            <binding name="name" type="pathNode">
                <param>4</param>
            </binding>
            <binding strict="true" name="kiwi_yard" type="searchReplace">
                <param type="nodeData">
                    <param>/stanbol/factories/sites/test/test.config</param>
                </param>
                <param type="pathNode">
                    <param>4</param>
                </param>
            </binding>
            <binding name="stat">Test</binding>
        </bindings>
        <conditions>
            <condition type="equals">
                <param>{stat}</param>
                <param>Test</param>
            </condition>
        </conditions>
        <actions>
            <action type="createUpdateNode">
                <param>/stanbol/instances/sites/{name}_kiwi_yard</param>
                <param>{kiwi_yard}</param>
            </action>
        </actions>
    </rule>
</rules>